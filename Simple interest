
#include <stdio.h>

int main() {
    int p,t,r;
    float si;
    printf("enter the value of the p\n");
    scanf("%d",&p);
    printf("enter the value of t\n");
    scanf("%d",&t);
    printf("enter the value of r\n");
    scanf("%d",&r);
    si =(p*t*r)/100;
    printf("simple interest,&si");

    return 0;
}
