#include <stdio.h>
struct Book {
    char title[50];
    char author[50];
    int year;
};
int main() {
    struct Book b[50];
    int n, i;
    printf("Enter number of books: ");
    scanf("%d", &n);
    for (i = 0; i < n; i++) {
        printf("\nEnter details of book %d:\n", i + 1);
        printf("Title: ");
        scanf("%s", b[i].title);
        printf("Author: ");
        scanf("%s", b[i].author);
        printf("Year: ");
        scanf("%d", &b[i].year);
    }
    printf("\n--- Book List ---\n");
    for (i = 0; i < n; i++) {
        printf("\nTitle: %s", b[i].title);
        printf("\nAuthor: %s", b[i].author);
        printf("\nYear: %d\n", b[i].year);
    }

    return 0;
}
