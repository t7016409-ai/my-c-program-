#include <stdio.h>

void demoValue(int a, int b) {
    int t = a;
    a = b;
    b = t;
    printf("Call by Value: %d %d\n", a, b);
}

void demoRef(int *a, int *b) {
    int t = *a;
    *a = *b;
    *b = t;
    printf("Call by Reference: %d %d\n", *a, *b);
}

int main() {
    int x, y;

    printf("Enter two currency values: ");
    scanf("%d %d", &x, &y);

    demoValue(x, y);
    demoRef(&x, &y);

    return 0;
}
